<!doctype html>
<html>
<head>
    <script src="//code.jquery.com/jquery-3.1.1.min.js"
            integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
</head>
<body>

<h1>Hello Ajax World</h1>

<input type="button" name="doajax" value="Load As Ajax" id="doajax" />

<script>

    (function ($) {
        'use strict';

        $(function () {

            $("#doajax").click(function() {

                $.ajax({
                    url: "index.php",
                    success: function (data) {
                        $('body').html(data);
                    }
                });
            });
        });
    })(jQuery)

</script>

</body>
</html>
